# Environment Configuration Example
# Copy this to .env and fill in your values

# ============================================================================
# DJANGO SETTINGS
# ============================================================================

# Secret key for Django (generate a strong random string for production)
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production

# Debug mode (Set to False in production!)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,wildguard.local

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================

# MongoDB connection string
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_HOST=mongodb://localhost:27017

# Database name
MONGODB_DB=wildguard

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT secret key (different from DJANGO_SECRET_KEY)
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# JWT token expiry in hours
JWT_EXPIRY_HOURS=24

# ============================================================================
# ML MODELS
# ============================================================================

# Image model path (YOLO)
IMAGE_MODEL_PATH=ml_services/models/yolov5_small.pt

# Audio model path (Random Forest)
AUDIO_MODEL_PATH=ml_services/models/audio_classifier.pkl

# ============================================================================
# CORS SETTINGS (for frontend communication)
# ============================================================================

# Frontend URL(s) - comma separated
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================================================
# DEPLOYMENT
# ============================================================================

# Server port
PORT=8000

# Number of gunicorn workers (production)
GUNICORN_WORKERS=4

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log file path
LOG_FILE=logs/wildguard.log

# ============================================================================
# EMAIL (Optional - for alerts)
# ============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================================================
# SECURITY (Production)
# ============================================================================

# HTTPS settings (production only)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Allowed origins for API requests
API_ALLOWED_ORIGINS=https://wildguard.org

# ============================================================================
# DATABASE BACKUP
# ============================================================================

# Backup schedule (optional)
BACKUP_SCHEDULE=daily
BACKUP_PATH=backups/
