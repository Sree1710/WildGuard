# WildGuard Backend Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Atlas Connection String (REQUIRED)
# Get this from MongoDB Atlas > Connect > Drivers
MONGODB_HOST=mongodb+srv://username:password@cluster.mongodb.net/Wildguard?retryWrites=true&w=majority

# Database name (optional, defaults to Wildguard)
MONGODB_DB=Wildguard

# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# JWT Secret
JWT_SECRET_KEY=your-jwt-secret-here

# Auto-generate detections (set to False to disable)
AUTO_GENERATE_DETECTIONS=True
